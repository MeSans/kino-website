@model KinoSuite.Models.UpcomingScreeningsViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>What's on this month</h1> 
</div>


<div class="row">
    <div class="col-md-12">
    </div>
</div>

<div class="row">
    

        @foreach (var item in Model.ScreeningItems)
        {
            <div class="row upcoming-screening row-eq-height">
                <div class="col-sm-4">
                    @if (@item.Image != null)
                    {
                        <img class="screening-img img-responsive" src="data:image;base64,@System.Convert.ToBase64String(@item.Image)" alt="img" />
                    }
                    @if (@item.youtube_link != "")
                    {
                        <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="youtube-video" src="@item.youtube_link" allowfullscreen></iframe>
                        </div>
                    }
                </div>
                <div class="col-sm-8">
                    <h1>@item.Title <br /> @item.genre</h1>
                    <h2>@item.Description</h2>
                    <h3>Screening start: @item.startTime</h3>
                    <h3>Movie length: @item.length minutes</h3>
                    @if (@item.isPremiere == true)
                {
                        <h4>Premiere</h4>
                    }
                    <h4>Subtitle language: @item.language</h4>                                       
                </div>
                
            </div>
        }
</div>
